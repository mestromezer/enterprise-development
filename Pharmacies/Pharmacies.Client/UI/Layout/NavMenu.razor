@inject IAuthenticationService AuthenticationService
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Pharmacies.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @if (AuthenticationService.User != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="pharmacies">
                    <span class="fa fa-solid fa-book" aria-hidden="true">  Аптеки </span>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="prices">
                    <span class="fa fa-solid fa-book" aria-hidden="true">  Цены </span>
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <span class="text-muted">Авторизуйтесь, чтобы увидеть разделы</span>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}